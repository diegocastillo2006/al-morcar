{% extends 'base.html.twig' %}

{% block title %}Resultados de la búsqueda
{% endblock %}

{% block body %}
	<div>
		{% for resultado in resultados %}
		<div class="card">
					<div class="card-header">
			<a href="{{ path('libro_ver', {'id': resultado.id}) }}">
				<h2 class="card-title">{{ resultado.titulo }}</h2>
			</a>
			</div>
		<div class="card-body" >

			<p class="card-text">{{ resultado.anio }}</p>
			<p class="card-text">{{ resultado.autor }}</p>
			<p class="card-text">{{ resultado.getNumPag() }}
				páginas</p>
			</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
